<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/custom_row"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="@dimen/abc_button_padding_vertical_material"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textColor="#000000"
            android:text="@string/default_primary_text"
            />

        <TextView
            android:id="@+id/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/primary_text"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:textColor="@color/primaryColor"
            android:text="@string/default_secondary_text"
            />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/image_button"
        android:src="@drawable/ic_navigation_black_24dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />
    
</RelativeLayout>